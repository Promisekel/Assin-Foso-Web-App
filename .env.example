# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# NEW BACKEND API CONFIGURATION (PostgreSQL + Cloudinary)
# ===========================================

# Backend API URL (Node.js/Express Server)
# For development:
VITE_API_BASE_URL=http://localhost:5000/api
# For production (replace with your deployed backend URL):
# VITE_API_BASE_URL=https://your-backend-app.railway.app/api

# Socket.IO Server URL
# For development:
VITE_SOCKET_SERVER_URL=http://localhost:5000
# For production (replace with your deployed backend URL):
# VITE_SOCKET_SERVER_URL=https://your-backend-app.railway.app

# App URL (for email invites and redirects)
# For development:
VITE_APP_URL=http://localhost:3002
# For production (replace with your Netlify domain):
# VITE_APP_URL=https://your-app-name.netlify.app

# Application Environment
VITE_APP_ENV=development

# ===========================================
# LEGACY FIREBASE CONFIGURATION (TO BE REMOVED)
# ===========================================

# Firebase Configuration (DEPRECATED - Will be removed)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ===========================================
# THIRD-PARTY API KEYS (OPTIONAL)
# ===========================================

# Google APIs
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key
VITE_GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key

# EmailJS Configuration (Optional - for contact forms)
VITE_EMAILJS_SERVICE_ID=your-emailjs-service-id
VITE_EMAILJS_TEMPLATE_ID=your-emailjs-template-id
VITE_EMAILJS_PUBLIC_KEY=your-emailjs-public-key

# Daily.co (Video Conferencing)
VITE_DAILY_API_KEY=your-daily-api-key

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Environment
NODE_ENV=development

# Debug mode
VITE_DEBUG=true
